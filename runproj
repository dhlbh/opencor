#!/bin/sh

OS=`uname -s`

if [ $OS = "Linux" ]; then
    echo "\033[44;37;1mRunning OpenCOR...\033[0m"
fi

WMsg="Information: OpenCOR must first be built before being run."

if [ $OS = "Linux" ]; then
    if [ -f build/OpenCOR ]; then
        build/OpenCOR $*
    else
        echo $WMsg
    fi
else
    if [ -d build/OpenCOR.app ]; then
        build/OpenCOR.app/Contents/MacOS/OpenCOR $*
    else
        echo $WMsg
    fi
fi

if [ $OS = "Linux" ]; then
    echo "\033[42;37;1mAll done!\033[0m"
fi
